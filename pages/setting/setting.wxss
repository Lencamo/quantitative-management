page {
  background-color: whitesmoke;
}

/* 个人信息部分 */
.header {
  font-size: 38rpx;
  color: white;

  margin: 50rpx 0rpx 0rpx 30rpx;
  background-color: #3695dd;
  width: 260rpx;
  height: 80rpx;
  border-radius: 15rpx 15rpx 0rpx 0rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

/* 信息展示部分 */
.personal-msg {
  background-color: white;
  padding: 20rpx 0rpx;
  /* border-radius: ; */

  margin: 0rpx 30rpx;
}

.personal-msg .input-box {
  height: 110rpx;
  display: flex;
  align-items: center;
}

.personal-msg .input-box view {
  margin: 0rpx 50rpx;
  margin-right: 0rpx;
  width: 200rpx;
  font-size: 30rpx;
  color: #8690a7;
}

.personal-msg .input-box input {
  padding: 30rpx 0rpx;
  margin-right: 50rpx;
  width: 100%;
  font-size: 30rpx;
  border-bottom: 3rpx solid whitesmoke;

  color: #2e2e2e;
}

/* 核心功能部分 */
.core-box {
  background-color: white;
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
}

.core-box .item {
  display: flex;
}

.core-box .item .itemBut {
  background-color: white;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 40rpx;
  padding-left: 20rpx;

  height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
}

/* 箭头样式 */
.iconfont {
  height: 100rpx;
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

/* 退出登录部分 */
.logout-box {
  margin: 80rpx 0rpx;
}

.logout-box .logoutBut {
  height: 70rpx;
  width: 550rpx;
  background-color: #03bd61;
  color: white;

  line-height: 70rpx;
}

/* 去除按钮默认样式 */
button::after {
  border: none;
}
button {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 0px;
  padding-right: 0px;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  line-height: 1.35;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000000;
  background-color: #fff;
  width: 100%;
  height: 100%;
}
